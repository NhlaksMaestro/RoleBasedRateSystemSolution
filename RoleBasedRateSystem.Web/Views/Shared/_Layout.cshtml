<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Role Based Rate System</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link rel="stylesheet" media="screen" href="~/style/bootstrap.min.css">
    <link rel="stylesheet" media="screen" href="~/style/bootstrap-theme.min.css">
    <!-- Bootstrap Admin Theme -->
    <link rel="stylesheet" media="screen" href="~/style/bootstrap-admin-theme.css">
    <link rel="stylesheet" media="screen" href="~/style/bootstrap-admin-theme-change-size.css">
    <link rel="stylesheet" media="screen" href="~/style/Site.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
       <script type="text/javascript" src="js/html5shiv.js"></script>
       <script type="text/javascript" src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body class="bootstrap-admin-with-small-navbar">    <!-- small navbar -->
    <nav class="navbar navbar-default navbar-fixed-top bootstrap-admin-navbar-sm" role="navigation">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-left bootstrap-admin-theme-change-size">
                            <li class="text">Change size:</li>
                            <li><a class="size-changer small">Small</a></li>
                            <li><a class="size-changer large active">Large</a></li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown">
                                <a href="#" role="button" class="dropdown-toggle" data-hover="dropdown"> <i class="glyphicon glyphicon-user"></i> Select Automation <i class="caret"></i></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Action</a></li>
                                    <li><a href="#">Another action</a></li>
                                    <li><a href="#">Something else here</a></li>
                                    <li role="presentation" class="divider"></li>
                                    <li><a href="index.html">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    @{var employee = Session["Employee"] as Entities.Employee;}
    @switch (employee.DepartmentRole.Name)
    {
        case "System Administrator":
            <nav class="navbar navbar-default navbar-fixed-top bootstrap-admin-navbar" role="navigation">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-hover="collapse" data-target=".main-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                            </div>
                            <div class="collapse navbar-collapse main-navbar-collapse">
                                <ul class="nav navbar-nav">
                                    <li>@Html.ActionLink("Department", "Index", "Department")</li>
                                    <li>@Html.ActionLink("Employee", "Index", "Employee")</li>
                                    <li>@Html.ActionLink("DepartmentRole", "Index", "Department Role")</li>
                                    <li>@Html.ActionLink("EmployeeProject", "Index", "Employee Projects")</li>
                                    <li>@Html.ActionLink("Project", "Index", "Project")</li>
                                    <li>@Html.ActionLink("ProjectRole", "Index", "Project Role")</li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a href="#" role="button" class="dropdown-toggle" data-hover="dropdown">
                                            <i class="glyphicon glyphicon-user"></i>@employee.FirstName @employee.LastName <i class="caret"></i>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li role="presentation" class="divider"></li>
                                            <li>@Html.ActionLink("Log Off", "LogOff", "Authentication")</li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div><!-- /.container -->
            </nav>
            break;
        case "Sales Executive":
            <nav class="navbar navbar-default navbar-fixed-top bootstrap-admin-navbar" role="navigation">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-hover="collapse" data-target=".main-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                            </div>
                            <div class="collapse navbar-collapse main-navbar-collapse">
                                <ul class="nav navbar-nav ">
                                    <li>@Html.ActionLink("Search For Rates", "SearchRates", "SalesExecutive", new { employeeId = employee.EmployeeId }, null)</li>
                                    <li>@Html.ActionLink("Employee In Role", "SearchEmployeesInRole", "SalesExecutive", new { departmentRoleId = employee.DepartmentRoleId }, null)</li>
                                </ul>
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a href="#" role="button" class="dropdown-toggle" data-hover="dropdown">
                                            <i class="glyphicon glyphicon-user"></i>@employee.FirstName @employee.LastName <i class="caret"></i>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li role="presentation" class="divider"></li>
                                            <li>@Html.ActionLink("Log Off", "LogOff", "Authentication")</li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div><!-- /.container -->
            </nav>
            break;
        default:
            <nav class="navbar navbar-default navbar-fixed-top bootstrap-admin-navbar" role="navigation">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-hover="collapse" data-target=".main-navbar-collapse">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                            </div>
                            <div class="collapse navbar-collapse main-navbar-collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    <li class="dropdown">
                                        <a href="#" role="button" class="dropdown-toggle" data-hover="dropdown">
                                            <i class="glyphicon glyphicon-user"></i>@employee.FirstName @employee.LastName <i class="caret"></i>
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li role="presentation" class="divider"></li>
                                            <li>@Html.ActionLink("Log Off", "LogOff", "Authentication")</li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div><!-- /.container -->
            </nav>
            break;
    }

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/js/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/twitter-bootstrap-hover-dropdown.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap-admin-theme-change-size.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>