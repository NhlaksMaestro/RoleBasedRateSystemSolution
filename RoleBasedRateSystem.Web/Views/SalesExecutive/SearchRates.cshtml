@model RoleBasedRateSystem.Web.Models.ViewModels.MainViewModel
@{
    ViewBag.Title = "SalesExecutive";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Rates Per Hour</h2>
<div class="row">
    <div class="col-md-12 col-lg-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="text-muted bootstrap-admin-box-title">Employees</div>
                @*<div class="pull-right"><span class="badge">@Html.DisplayFor(model => model.Employee.Count)</span></div>*@
            </div>
            <div class="bootstrap-admin-panel-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @*<form class="form-inline " role="form">*@
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        <div class="form-group">
                            <div class="col-md-5 col-lg-5 col-xs-5">
                                @Html.LabelFor(model => model.MinimumRate, new { placeholder = "Minimum Rate", @class = "control-label" })
                                @Html.EditorFor(model => model.MinimumRate, new { placeholder = "Minimum Rate", @type = "number", @min = "0", @max = "1000" })
                                @Html.ValidationMessageFor(model => model.MinimumRate)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-5 col-lg-5 col-xs-5">
                                @Html.LabelFor(model => model.MaximumRate, new { placeholder = "Maximum Rate", @class = "control-label" })
                                @Html.EditorFor(model => model.MaximumRate, new { placeholder = "Maximum Rate", @type = "number", @min = "0", @max = "10000" })
                                @Html.ValidationMessageFor(model => model.MaximumRate)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-4 col-lg-4 col-xs-4">
                                <input type="submit" value="Search Rates" class="btn btn-default" />
                                @*@Html.ActionLink("", "SalesExecutive", "Home", new { minRate = Model.MinimumRate, maxRate = Model.MaximumRate }, new { @class = "btn btn-lg btn-default" })*@
                            </div>
                        </div>
                    </div>
                    @*</form>*@
                }
            </div>
        </div>
    </div>
</div>
<div class="row">
    @Html.Partial("RatesPartialView", Model.Rates);
</div>
