@model IEnumerable<Entities.DepartmentRole>
<div class="col-md-12 col-lg-12 col-xs-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">Rates</div>
            <div class="pull-right"><span class="badge">@Model.Count()</span></div>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.RatePerHour)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Employees.Count)
                        </th>
                        <th>
                            View Employees
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                R @Html.DisplayFor(modelItem => item.RatePerHour)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employees.Count)
                            </td>
                            <td>
                                @Html.ActionLink("Employee", "RoleEmployees", "Employee", new { id = item.DepartmentRoleId }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div></div>


